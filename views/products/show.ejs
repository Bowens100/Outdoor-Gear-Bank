<%- include('../layout/boilerplate') %>


    <div class="container mt-5 bg-light">
        <div class="row">
            <div class="col">
                <img src="<%= product.image  %>" class="img-fluid" alt="">
            </div>
            <div class="col">
                <h1>
                    <%= product.name %>
                </h1>
                <ul>
                    <li><strong>Price:</strong> $<%= product.price %>
                    </li>
                    <li><strong>Description:</strong>
                        <%= product.description %>
                    </li>
                    <li><strong>Brand:</strong>
                        <%= product.brand %>
                    </li>
                </ul>

                <a class="btn btn-info mb-2" href="<%= product._id %>/edit">Edit Product</a>

                <form action="<%= product._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger mb-2 ">Delete</button>
                </form>
            </div>
        </div>
    </div>